{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "resolveJsonModule": true,
    "paths": {
      "../pkg/*": ["./pkg/*"]
    }
  },
  "include": ["src/**/*", "pkg/**/*"],
  "exclude": ["node_modules", "build", "src/o1js-bindings"]
}
